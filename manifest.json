{
  "manifest_version": 2,
  "name": "coordinates",
  "version": "1.0.2",
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png",
    "300": "icon300.png"
  },
  "description": "Adds mouse position tooltip, with its x, and y coordinates. Also measures areas of regions.",
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content-script.js"],
      "all_frames": true
    }

  ],
  "background": {
    "scripts": ["popup.js"]
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_icon": "iconoff128.png",
    "__default_popup": "popup.html"
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "storage"
  ]
}